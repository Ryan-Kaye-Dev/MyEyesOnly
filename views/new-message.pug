extends layout

block content
    div.form
        form(action="/new-message", method="POST")
            h1.heading New Message
            label(for="username") Title:
            input(type="text", id="title", name="title" placeholder="Enter a title")

            label(for="password") Message:
            textarea(id="text", name="text" placeholder="Enter your message", rows="10" cols="50")

            button(type="submit") Send It!
